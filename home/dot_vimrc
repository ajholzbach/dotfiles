" Core
set nocompatible
set encoding=utf-8
filetype plugin indent on
syntax on

" UI
set number
set cursorline
set showmatch
set laststatus=2
set noshowmode
set showcmd
set signcolumn=yes
set splitbelow
set splitright

" Colors
if has('termguicolors')
  set termguicolors
endif

try
  colorscheme catppuccin_mocha
catch /^Vim\%((\a\+)\)\=:E185/
  set background=dark
  colorscheme default
endtry

" Indentation
set shiftwidth=4
set tabstop=4
set softtabstop=4
set autoindent

" Search
set incsearch
set ignorecase
set smartcase
set hlsearch
nnoremap <C-L> :nohlsearch<CR><C-L>

" Command line
set wildmenu
set wildmode=list:longest
set history=1000
set completeopt=menuone,noselect

" Movement
set scrolloff=5
set sidescrolloff=5
set backspace=indent,eol,start

" Wrapping
set wrap
set linebreak
set breakindent
set showbreak=>\

" Performance
set lazyredraw
set synmaxcol=300
set updatetime=300
set foldmethod=manual
set foldlevelstart=99

" Buffers
set hidden
set writebackup

" Mouse & clipboard
set mouse=a
if has('clipboard')
  set clipboard+=unnamedplus
endif

" Statusline
set statusline=%f%m%r%h%w\ [%{&filetype}]\ %=%-14.(%l,%c%V%)\ %P
